{
  "name": "@ai-commerce/infra",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for AI commerce recommender",
  "main": "dist/index.js",
  "bin": {
    "telegram-chatbot-cdk": "dist/app.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist cdk.out",
    "deploy": "./scripts/deploy.sh --yes",
    "deploy:quick": "source .env 2>/dev/null; cdk deploy",
    "diff": "source .env 2>/dev/null; cdk diff",
    "destroy": "source .env 2>/dev/null; cdk destroy",
    "synth": "cdk synth",
    "watch": "cdk watch",
    "bootstrap": "cdk bootstrap"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^24.0.0",
    "aws-cdk": "^2.100.0",
    "esbuild": "^0.24.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "files": ["dist"]
}
