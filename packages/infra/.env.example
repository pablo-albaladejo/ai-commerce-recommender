# =============================================
# AWS CDK Deployment Environment Variables
# =============================================
# Copy this file to .env in the project root and fill in your values:
#   cp packages/infra/env.template .env
#
# Then load it before deploying:
#   source .env
#   ./packages/infra/scripts/deploy.sh dev
# =============================================

# ---------------------------------------------
# Required: AWS Configuration
# ---------------------------------------------
# Your AWS account ID (12-digit number)
# Get it with: aws sts get-caller-identity --query Account --output text
export AWS_ACCOUNT=

# AWS region for deployment
export AWS_REGION=us-east-1

# ---------------------------------------------
# Required: Telegram Bot
# ---------------------------------------------
# Get your bot token from @BotFather on Telegram
# https://t.me/botfather
export TELEGRAM_BOT_TOKEN=

# ---------------------------------------------
# Optional: Catalog Configuration
# ---------------------------------------------
# S3 bucket containing your product catalog artifacts
# Leave empty if you haven't uploaded artifacts yet
export CATALOG_BUCKET=

# Prefix path for artifacts in the bucket (e.g., "itower/")
export CATALOG_PREFIX=

# ---------------------------------------------
# Optional: Bedrock Model Configuration
# ---------------------------------------------
# Titan embedding model ID (default: amazon.titan-embed-text-v1)
export TITAN_EMBED_MODEL_ID=amazon.titan-embed-text-v1

# Claude model ID for chat (default: anthropic.claude-3-haiku-20240307-v1:0)
export CLAUDE_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0

