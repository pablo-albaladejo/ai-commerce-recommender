{
  "name": "ai-commerce-recommender",
  "version": "1.0.0",
  "description": "Serverless commerce product recommender chatbot on AWS - Monorepo",
  "private": true,
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "clean": "pnpm -r clean && rm -rf dist",
    "dev": "pnpm -r --parallel dev",
    "cdk:deploy": "pnpm --filter @ai-commerce/infra deploy",
    "cdk:diff": "pnpm --filter @ai-commerce/infra diff",
    "cdk:destroy": "pnpm --filter @ai-commerce/infra destroy",
    "index:build": "pnpm --filter @ai-commerce/scripts build:index",
    "index:upload": "pnpm --filter @ai-commerce/scripts upload:artifacts",
    "index:run": "pnpm run index:build && pnpm run index:upload",
    "download:shopify-sitemap": "pnpm --filter @ai-commerce/scripts download:shopify-sitemap"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.0"
  },
  "keywords": [
    "monorepo",
    "pnpm",
    "aws",
    "lambda",
    "bedrock",
    "commerce",
    "recommender",
    "chatbot",
    "bm25",
    "embeddings"
  ],
  "author": "",
  "license": "MIT"
}
