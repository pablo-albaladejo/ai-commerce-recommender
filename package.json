{
  "name": "ai-commerce-recommender",
  "version": "1.0.0",
  "description": "Serverless commerce product recommender chatbot on AWS - Monorepo",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r clean && rm -rf dist",
    "dev": "pnpm -r --parallel dev",
    "cdk:deploy": "pnpm --filter @ai-commerce/infra run deploy",
    "cdk:diff": "pnpm --filter @ai-commerce/infra run diff",
    "cdk:destroy": "pnpm --filter @ai-commerce/infra run destroy",
    "index:build": "pnpm --filter @ai-commerce/scripts build:index",
    "index:upload": "pnpm --filter @ai-commerce/scripts upload:artifacts",
    "index:run": "pnpm run index:build && pnpm run index:upload",
    "download:shopify-sitemap": "pnpm --filter @ai-commerce/scripts download:shopify-sitemap",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.0.0",
    "@types/rosie": "^0.0.45",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.0",
    "rosie": "^2.1.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "monorepo",
    "pnpm",
    "aws",
    "lambda",
    "bedrock",
    "commerce",
    "recommender",
    "chatbot",
    "bm25",
    "embeddings"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.30.0",
    "@aws-lambda-powertools/metrics": "^2.30.0",
    "@aws-lambda-powertools/tracer": "^2.30.0",
    "@aws-sdk/client-bedrock-runtime": "^3.958.0",
    "@aws-sdk/client-dynamodb": "^3.958.0",
    "@aws-sdk/client-s3": "^3.958.0",
    "@aws-sdk/lib-dynamodb": "^3.958.0",
    "@middy/core": "^6.4.5",
    "@middy/http-error-handler": "^6.4.5",
    "@middy/http-json-body-parser": "^6.4.5",
    "@middy/validator": "^6.4.5",
    "@types/aws-lambda": "^8.10.159",
    "@types/uuid": "^10.0.0",
    "aws-lambda": "^1.0.7",
    "uuid": "^13.0.0",
    "xml2js": "^0.6.2",
    "zod": "^4.2.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{js,jsx,json,md,yaml,yml}": ["prettier --write"]
  }
}
